<div class="post">
  <p class="content">
    <%= post.body %>
  </p>
  <div class="info">
    <span class="date">
      <%= t 'time.before', time: time_ago_in_words(post.created_at) %>
    </span>
  </div>

  <% if post.user_id == current_user.id %>
    <div class="delete">
      <%= link_to t('btn.delete'), post, method: 'delete',
        confirm: t('posts.delete_confirmation') %>
    </div>
  <% end %>
</div>
