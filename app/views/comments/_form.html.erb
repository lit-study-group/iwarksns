<%= form_for [post, comment], html: { class: 'form' } do |f| %>
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2">
      <%= f.text_area :body, class: 'form-control', placeholder: t('comments.placeholder') %>
    </div>
    <div class="col-lg-1">
      <%= f.submit t('btn.post'), class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
